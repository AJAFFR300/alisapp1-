<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_1sdp"
            android:layout_margin="@dimen/_7sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_15ssp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/weather_icon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/new_moon"
                    android:layout_marginTop="@dimen/_20sdp"/>

                <TextView
                    android:id="@+id/weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shine"
                    android:textSize="@dimen/_11ssp"
                    android:background="@drawable/classification_bg"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:textColor="@color/text_color"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/_20ssp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/day_icon"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/calendar"
                            android:padding="@dimen/_3sdp"
                            app:tint="@color/peach" />

                        <TextView
                            android:id="@+id/day_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/day_icon"
                            android:text="Day"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/second_text_color"
                            android:layout_marginStart="@dimen/_8sdp"/>

                        <TextView
                            android:id="@+id/day"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Today"
                            android:textSize="@dimen/_12ssp"
                            android:layout_below="@+id/day_tv"
                            android:textColor="@color/text_color"
                            android:layout_toEndOf="@+id/day_icon"
                            android:layout_marginStart="@dimen/_8sdp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/pollution_icon"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/air_pollution"
                            android:padding="@dimen/_3sdp"
                            app:tint="@color/text_color" />

                        <TextView
                            android:id="@+id/pollution_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/pollution_icon"
                            android:text="Pollution"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/second_text_color"
                            android:layout_marginStart="@dimen/_8sdp"/>

                        <TextView
                            android:id="@+id/pollution"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="low"
                            android:textSize="@dimen/_12ssp"
                            android:layout_below="@+id/pollution_tv"
                            android:textColor="@color/text_color"
                            android:layout_toEndOf="@+id/pollution_icon"
                            android:layout_marginStart="@dimen/_8sdp"/>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/second_text_color"
                    android:layout_marginStart="@dimen/_19sdp"
                    android:layout_marginEnd="@dimen/_19sdp"
                    android:layout_marginTop="@dimen/_12sdp"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/_15ssp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/min_icon"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/fever"
                            app:tint="@color/peach" />

                        <TextView
                            android:id="@+id/min_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/min_icon"
                            android:text="Min Temprature"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/second_text_color"
                            android:layout_marginStart="@dimen/_8sdp"/>

                        <TextView
                            android:id="@+id/min"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6:04 AM"
                            android:textSize="@dimen/_12ssp"
                            android:layout_below="@+id/min_tv"
                            android:textColor="@color/text_color"
                            android:layout_toEndOf="@+id/min_icon"
                            android:layout_marginStart="@dimen/_8sdp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/max_icon"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/fever"
                            app:tint="@color/text_color" />

                        <TextView
                            android:id="@+id/max_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/max_icon"
                            android:text="Max Tempreature"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/second_text_color"
                            android:layout_marginStart="@dimen/_8sdp"/>

                        <TextView
                            android:id="@+id/max"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6:16 PM"
                            android:textSize="@dimen/_12ssp"
                            android:layout_below="@+id/max_tv"
                            android:textColor="@color/text_color"
                            android:layout_toEndOf="@+id/max_icon"
                            android:layout_marginStart="@dimen/_8sdp"/>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/second_text_color"
                    android:layout_marginStart="@dimen/_19sdp"
                    android:layout_marginEnd="@dimen/_19sdp"
                    android:layout_marginTop="@dimen/_12sdp"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/sunrise_icon"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/sunrise"
                            app:tint="@color/peach" />

                        <TextView
                            android:id="@+id/sunrise_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/sunrise_icon"
                            android:text="Sunrise"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/second_text_color"
                            android:layout_marginStart="@dimen/_8sdp"/>

                        <TextView
                            android:id="@+id/sunrise"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6:04 AM"
                            android:textSize="@dimen/_12ssp"
                            android:layout_below="@+id/sunrise_tv"
                            android:textColor="@color/text_color"
                            android:layout_toEndOf="@+id/sunrise_icon"
                            android:layout_marginStart="@dimen/_8sdp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/sunset_icon"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/sunset"
                            app:tint="@color/text_color" />

                        <TextView
                            android:id="@+id/sunset_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/sunset_icon"
                            android:text="Sunrise"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/second_text_color"
                            android:layout_marginStart="@dimen/_8sdp"/>

                        <TextView
                            android:id="@+id/sunset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6:16 PM"
                            android:textSize="@dimen/_12ssp"
                            android:layout_below="@+id/sunset_tv"
                            android:textColor="@color/text_color"
                            android:layout_toEndOf="@+id/sunset_icon"
                            android:layout_marginStart="@dimen/_8sdp"/>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/second_text_color"
                    android:layout_marginStart="@dimen/_19sdp"
                    android:layout_marginEnd="@dimen/_19sdp"
                    android:layout_marginTop="@dimen/_12sdp"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/_15ssp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/uv_icon"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/sun"
                            app:tint="@color/peach" />

                        <TextView
                            android:id="@+id/uv_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/uv_icon"
                            android:text="UV"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/second_text_color"
                            android:layout_marginStart="@dimen/_8sdp"/>

                        <TextView
                            android:id="@+id/uv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6:04 AM"
                            android:textSize="@dimen/_12ssp"
                            android:layout_below="@+id/uv_tv"
                            android:textColor="@color/text_color"
                            android:layout_toEndOf="@+id/uv_icon"
                            android:layout_marginStart="@dimen/_8sdp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/visibility_icon"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/eye"
                            android:padding="@dimen/_2sdp"
                            app:tint="@color/text_color" />

                        <TextView
                            android:id="@+id/visibility_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/visibility_icon"
                            android:text="Visibility"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/second_text_color"
                            android:layout_marginStart="@dimen/_8sdp"/>

                        <TextView
                            android:id="@+id/visibility"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Moderate"
                            android:textSize="@dimen/_12ssp"
                            android:layout_below="@+id/visibility_tv"
                            android:textColor="@color/text_color"
                            android:layout_toEndOf="@+id/visibility_icon"
                            android:layout_marginStart="@dimen/_8sdp"/>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/second_text_color"
                    android:layout_marginStart="@dimen/_19sdp"
                    android:layout_marginEnd="@dimen/_19sdp"
                    android:layout_marginTop="@dimen/_12sdp"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/wind_icon"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/wind"
                            android:padding="@dimen/_3sdp"
                            app:tint="@color/peach" />

                        <TextView
                            android:id="@+id/wind_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/wind_icon"
                            android:text="Wind"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/second_text_color"
                            android:layout_marginStart="@dimen/_8sdp"/>

                        <TextView
                            android:id="@+id/wind"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="9 mph"
                            android:textSize="@dimen/_12ssp"
                            android:layout_below="@+id/wind_tv"
                            android:textColor="@color/text_color"
                            android:layout_toEndOf="@+id/wind_icon"
                            android:layout_marginStart="@dimen/_8sdp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/wind_dir_icon"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/wind"
                            android:padding="@dimen/_3sdp"
                            app:tint="@color/text_color" />

                        <TextView
                            android:id="@+id/wind_dir_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/wind_dir_icon"
                            android:text="Wind Direction"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/second_text_color"
                            android:layout_marginStart="@dimen/_8sdp"/>

                        <TextView
                            android:id="@+id/wind_dir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="South Westerly"
                            android:textSize="@dimen/_12ssp"
                            android:layout_below="@+id/wind_dir_tv"
                            android:textColor="@color/text_color"
                            android:layout_toEndOf="@+id/wind_dir_icon"
                            android:layout_marginStart="@dimen/_8sdp"/>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/second_text_color"
                    android:layout_marginStart="@dimen/_19sdp"
                    android:layout_marginEnd="@dimen/_19sdp"
                    android:layout_marginTop="@dimen/_12sdp"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/pressure_icon"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/pressure"
                            android:padding="@dimen/_3sdp"
                            app:tint="@color/peach" />

                        <TextView
                            android:id="@+id/pressure_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/pressure_icon"
                            android:text="Pressure"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/second_text_color"
                            android:layout_marginStart="@dimen/_8sdp"/>

                        <TextView
                            android:id="@+id/pressure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="9 mph"
                            android:textSize="@dimen/_12ssp"
                            android:layout_below="@+id/pressure_tv"
                            android:textColor="@color/text_color"
                            android:layout_toEndOf="@+id/pressure_icon"
                            android:layout_marginStart="@dimen/_8sdp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/humidity_icon"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/drop"
                            android:padding="@dimen/_3sdp"
                            app:tint="@color/text_color" />

                        <TextView
                            android:id="@+id/humidity_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/humidity_icon"
                            android:text="Humidity"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/second_text_color"
                            android:layout_marginStart="@dimen/_8sdp"/>

                        <TextView
                            android:id="@+id/humidity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="78%"
                            android:textSize="@dimen/_12ssp"
                            android:layout_below="@+id/humidity_tv"
                            android:textColor="@color/text_color"
                            android:layout_toEndOf="@+id/humidity_icon"
                            android:layout_marginStart="@dimen/_8sdp"/>

                    </RelativeLayout>

                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>